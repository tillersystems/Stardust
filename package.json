{
  "name": "@tillersystems/stardust",
  "version": "1.2.1",
  "description": "Tiller Design System",
  "author": {
    "name": "Tillersystems",
    "url": "https://www.tillersystems.com/"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es",
    "test": "BABEL_ENV=test jest",
    "test:cov": "yarn test --coverage",
    "test:ci": "yarn test --coverage --ci",
    "lint": "eslint .",
    "format": "prettier --config .prettierrc --color --write \"src/**/*.js\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "yarn clean && yarn test && yarn build:commonjs && yarn build:es",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublishOnly": "yarn build",
    "release": "./internal/tools/release.sh"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "eslint": "./node_modules/.bin/eslint",
    "jest": "./node_modules/.bin/jest",
    "prettier": "./node_modules/.bin/prettier",
    "conventional-changelog": "./node_modules/.bin/conventional-changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint",
      "pre-push": "yarn run test"
    }
  },
  "peerDependencies": {
    "popmotion": "^8.x",
    "prop-types": "^15.x",
    "react": "^16.x",
    "react-dom": "^16.x",
    "react-pose": "^2.x || ^3.0.0",
    "styled-components": "^3.x"
  },
  "dependencies": {
    "initials": "^3.0.0",
    "luxon": "^1.3.3",
    "polished": "^2.0.0",
    "react-portal": "^4.1.5",
    "styled-components-breakpoint": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/plugin-external-helpers": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-transform-modules-commonjs": "7.1.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "@nivo/bar": "0.49.1",
    "@sambego/storybook-state": "1.2.0",
    "@storybook/addon-actions": "3.4.11",
    "@storybook/addon-info": "3.4.11",
    "@storybook/addon-knobs": "3.4.11",
    "@storybook/addon-links": "3.4.11",
    "@storybook/addons": "3.4.11",
    "@storybook/react": "3.4.11",
    "@tillersystems/eslint-config": "1.1.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.2",
    "babel-plugin-styled-components": "1.7.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-runtime": "6.26.0",
    "conventional-changelog-cli": "2.0.5",
    "cross-env": "5.2.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.0.0-rc.14",
    "jest": "23.6.0",
    "jest-styled-components": "6.2.0",
    "json": "9.0.6",
    "popmotion": "8.3.8",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-pose": "3.3.3",
    "storybook-readme": "3.3.0",
    "styled-components": "3.4.9"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*.test\\.js$",
      ".*.stories\\.js$"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internal/tools/mocks/fileMock.js"
    },
    "setupFiles": [
      "./internal/jest/index.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": ".*.test\\.js$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
